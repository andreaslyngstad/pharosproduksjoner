<div id="content">
 
    <div id="menu"> 
    <ul><% for f in @pages do %>
      <li><%= link_to(f.navlabel, view_page_path(f.name))%></li>
      <%end%>
        <li>Blogg</li>
   <%= render :partial => "shared/links" %> 
      </ul>
      </div>
<div id="content_l">
	<%= link_to "<< Til alle blogg innlegg", view_blogg_path %>
	<h1><%= @post.title %></h1>
		<strong>Av: <%= h(@post.author.full_name) %></strong>, <em><%= h(@post.created_at.strftime("%d. %B %Y")) %>.</em>	
	<p><%= h(@post.lead) %></p>	
	<p><%=  @post.content %></p>	
	<% if @post.comments_count != 0%>
		<h3>Kommentarer</h3>
		<%= render(:partial => 'shared/comment', :collection => @post.approved_comments) %>	
	<% end -%>
	<%= render :partial => "shared/newcomment"%>

	
</div>


</div>


